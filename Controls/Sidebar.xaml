<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecureVault.Controls.Sidebar"
             xmlns:helpers="clr-namespace:SecureVault.Helpers"
             x:Name="SidebarRoot">

    <Grid RowDefinitions="Auto,*,Auto">
        <VerticalStackLayout Grid.Row="0">
            <Grid Padding="6, 7">

                <Label 
                    x:Name="HamburgerLabel"
                    FontFamily="MaterialIconsRegular" 
                    Text="{x:Static helpers:MaterialDesignIconFonts.Close}"
                    FontSize="25"
                    Margin="8,0,0,0"
                    VerticalOptions="Center"
                    TextColor="#0078D4">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHamburgerClicked" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>

            <CollectionView x:Name="MenuItems"
                            SelectionMode="Single"
                            SelectionChanged="OnSelectionChanged"
                            Margin="6"
                            ItemsSource="{Binding ItemsSource, Source={x:Reference SidebarRoot}}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="5"
                               BorderColor="Transparent"
                               BackgroundColor="Transparent"
                               HasShadow="False">
                            <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                                <Label Text="{Binding Icon}"
                                       FontFamily="MaterialIconsRegular"
                                       FontSize="24"
                                       VerticalOptions="Center"
                                       TextColor="#0078D4"
                                        />
                                <Label Text="{Binding Title}"
                                       Margin="10,0,0,0" 
                                       Grid.Column="1"
                                       FontSize="18"
                                       VerticalOptions="Center"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray500}}"
                                       IsVisible="{Binding Source={x:Reference SidebarRoot}, Path=IsSidebarExpanded}"  />
                                <Label 
                                    FontFamily="MaterialIconsRegular"
                                    Text="{x:Static helpers:MaterialDesignIconFonts.Delete}"
                                    FontSize="25"
                                    TextColor="#0078D4"
                                    BackgroundColor="Transparent"
                                    VerticalOptions="Center"
                                    HorizontalOptions="End"
                                    Grid.Column="2">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={x:Reference SidebarRoot}, Path=BindingContext.DeleteMenuItemCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Label.GestureRecognizers>
                                </Label>
                          
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Grid Padding="6, 7">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAddMenuClicked" />
                </Grid.GestureRecognizers>

                <HorizontalStackLayout VerticalOptions="Center"
                           HorizontalOptions="Start"
                           Spacing="8"
                           Margin="8,0,0,0">
                    <Label 
                        x:Name="AddGroupLabel"
                        FontFamily="MaterialIconsRegular" 
                        Text="{x:Static helpers:MaterialDesignIconFonts.Create_new_folder}"
                        FontSize="25"
                        TextColor="#0078D4" />

                    <Label Text="Add New Group"
                       VerticalOptions="Center"
                       FontSize="14"
                       TextColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray500}}"
                       IsVisible="{Binding Source={x:Reference SidebarRoot}, Path=IsSidebarExpanded}" />
                </HorizontalStackLayout>
            </Grid>

        </VerticalStackLayout>

        <BoxView Grid.Row="1" />

        <Grid Grid.Row="2" Padding="6, 12">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnLogoutClicked" />
            </Grid.GestureRecognizers>

            <Frame BackgroundColor="#0078D4"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="Center">
                <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                    <Label 
                        FontFamily="MaterialIconsRegular"
                        Text="{x:Static helpers:MaterialDesignIconFonts.Logout}" 
                        FontSize="20"
                        TextColor="White"
                        VerticalOptions="Center" />

                    <Label 
                        Text="Logout"
                        FontAttributes="Bold"
                        FontSize="16"
                        TextColor="White"
                        VerticalOptions="Center"
                        IsVisible="{Binding Source={x:Reference SidebarRoot}, Path=IsSidebarExpanded}" />
                </HorizontalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentView>

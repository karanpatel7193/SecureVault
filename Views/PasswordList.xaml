<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecureVault.Views.PasswordList"
             xmlns:controls="clr-namespace:SecureVault.Views"
             xmlns:helpers="clr-namespace:SecureVault.Helpers"
             Title="Password List"
             x:Name="PasswordRoot">
    <Grid x:Name="MainGrid"
          RowDefinitions="*"
          ColumnDefinitions="*,0"
          BackgroundColor="{AppThemeBinding Light=White, Dark=#1e1e1e}">
        <Grid RowDefinitions="100, *" ColumnDefinitions="*" Padding="10">
            <VerticalStackLayout>
                <Grid Padding="5" ColumnDefinitions="*,Auto">
                    <Label x:Name="PageTitle"
                       Text="Your Passwords"
                       FontSize="16"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       Grid.Column="0" />
                    <Frame
                        x:Name="AddCloseFrame"
                        Padding="8"
                        BackgroundColor="LightGray"
                        CornerRadius="6"
                        HasShadow="False"
                        VerticalOptions="Center"
                        Grid.Column="1">

                        <Label 
                            x:Name="AddCloseLabel"
                            FontFamily="MaterialIconsRegular" 
                            Text="{x:Static helpers:MaterialDesignIconFonts.Add}"
                            FontSize="20"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            TextColor="Green">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAddClicked" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Frame>
                </Grid>
                <Grid ColumnDefinitions="*, Auto">
                    <Entry 
                        Placeholder="Search here..."
                        FontSize="16"
                        Text="{Binding SearchText, Mode=TwoWay}"
                        BackgroundColor="{AppThemeBinding Light=#EFEFEF, Dark=#3a3a3a}"
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        HeightRequest="40"
                        HorizontalOptions="FillAndExpand"
                        Grid.Column="0" />
                    <Label 
                        FontFamily="MaterialIconsRegular" 
                        Text="{x:Static helpers:MaterialDesignIconFonts.Search}"
                        FontSize="30"
                        VerticalOptions="Center"
                        TextColor="#0078D4"
                        Grid.Column="1"
                        Margin="5,0" />

                </Grid>
            </VerticalStackLayout>
            <CollectionView x:Name="PasswordsCollection"
                            ItemsSource="{Binding Passwords}"
                            SelectionMode="Single"
                            SelectionChanged="OnPasswordSelected"
                            Grid.Row="1">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="{AppThemeBinding Light=#EFEFEF, Dark=#3a3a3a}"
                               Padding="10" Margin="10"
                               CornerRadius="8"
                               HasShadow="False"
                               >
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                                <VerticalStackLayout Grid.Column="0">
                                    <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                    <Label Text="{Binding Username}" FontSize="14"
                                           TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                </VerticalStackLayout>
                                <Frame
                                    x:Name="AddCloseFrame"
                                    Padding="8"
                                    BackgroundColor="LightGray"
                                    CornerRadius="6"
                                    HasShadow="False"
                                    VerticalOptions="Center"
                                    Grid.Column="1">
                                    <Label 
                                    FontFamily="MaterialIconsRegular"
                                    Text="{x:Static helpers:MaterialDesignIconFonts.Delete}"
                                    FontSize="25"
                                    TextColor="#0078D4"
                                    BackgroundColor="Transparent"
                                    VerticalOptions="Center"
                                    Grid.Column="1">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer 
                                            Command="{Binding Source={x:Reference PasswordRoot}, Path=BindingContext.DeleteCommand}"
                                            CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </Frame>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <controls:PasswordForm x:Name="PasswordFormControl"
                       Grid.Column="1"
                       IsVisible="False"
                       Opacity="0"
                       TranslationX="50" />
    </Grid>
</ContentPage>
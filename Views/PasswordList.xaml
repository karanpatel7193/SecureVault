<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecureVault.Views.PasswordList"
             xmlns:controls="clr-namespace:SecureVault.Views"
             Title="Password List"
             x:Name="PasswordRoot">
    <Grid x:Name="MainGrid"
          RowDefinitions="*"
          ColumnDefinitions="*,0"
          BackgroundColor="{AppThemeBinding Light=White, Dark=#1e1e1e}">
        <Grid RowDefinitions="100, *" ColumnDefinitions="*" Padding="10">
            <VerticalStackLayout>
                <Grid ColumnDefinitions="*,Auto" Margin="0,5,0,10">
                    <Label x:Name="PageTitle"
                       Text="Your Passwords"
                       FontSize="16"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       Grid.Column="0" />
                    <Button x:Name="ToggleFormButton"
                        Text="Add"
                        Clicked="OnAddClicked"
                        FontSize="14"
                        Padding="10,5"
                        VerticalOptions="Center"
                        BackgroundColor="{AppThemeBinding Light=#007AFF, Dark=#0A84FF}"
                        TextColor="White"
                        Grid.Column="1" />
                </Grid>
                <Entry Placeholder="🔍 Search..."
                       FontSize="16"
                       Text="{Binding SearchText, Mode=TwoWay}"
                       BackgroundColor="{AppThemeBinding Light=#EFEFEF, Dark=#3a3a3a}"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                       HeightRequest="40"
                       HorizontalOptions="FillAndExpand" />

            </VerticalStackLayout>

            <CollectionView x:Name="PasswordsCollection"
                            ItemsSource="{Binding Passwords}"
                            SelectionMode="Single"
                            SelectionChanged="OnPasswordSelected"
                            Grid.Row="1">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="10"
                               BackgroundColor="{AppThemeBinding Light=#EFEFEF, Dark=#3a3a3a}"
                               CornerRadius="8"
                               HasShadow="False">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                                <VerticalStackLayout Grid.Column="0">
                                    <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                    <Label Text="{Binding Username}" FontSize="14"
                                           TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                </VerticalStackLayout>
                                <Button Text="🗑"
                                        BackgroundColor="Transparent"
                                        TextColor="Red"
                                        Command="{Binding Source={x:Reference PasswordRoot}, Path=BindingContext.DeleteCommand}"
                                        CommandParameter="{Binding .}"
                                        Grid.Column="1"
                                        VerticalOptions="Start" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <controls:PasswordForm x:Name="PasswordFormControl"
                       Grid.Column="1"
                       IsVisible="False"
                       Opacity="0"
                       TranslationX="50" />
    </Grid>
</ContentPage>